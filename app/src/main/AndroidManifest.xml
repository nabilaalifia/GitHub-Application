<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.githubapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.dicoding.githubapp.READ_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubApp">
        <activity android:name=".SettingsActivity" />
        <activity android:name=".FavoriteActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailGithubActivity" />
        <activity android:name=".AboutMeActivity" />
        <activity android:name=".MainActivity" />

        <provider
            android:name=".FavoriteContentProvider"
            android:authorities="com.dicoding.githubapp"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.dicoding.githubapp.READ_DATABASE" />

        <receiver
            android:name="AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>